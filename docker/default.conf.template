server {
root   /usr/share/nginx/html;
  listen $PORT default_server;
	location ~ \.css {
    add_header  Content-Type    text/css;
}
location ~ \.js {
    add_header  Content-Type    application/x-javascript;
}
  location / {
  include mime.types;
        index  index.html index.htm;
        try_files $uri /index.html;                 
    }
}
